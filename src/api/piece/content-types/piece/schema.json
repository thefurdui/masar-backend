{
  "kind": "collectionType",
  "collectionName": "pieces",
  "info": {
    "singularName": "piece",
    "pluralName": "pieces",
    "displayName": "Piece",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "string",
      "unique": true,
      "required": true
    },
    "description": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "text"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "price": {
      "displayName": "Price",
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "piece.price"
    },
    "collection": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::collection.collection",
      "inversedBy": "pieces"
    },
    "types": {
      "type": "customField",
      "options": [
        "ring",
        "earrings",
        "brooch",
        "necklace",
        "bracelet",
        "other"
      ],
      "required": true,
      "customField": "plugin::multi-select.multi-select"
    }
  }
}
